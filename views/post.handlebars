<div class="card text-center">
  <div class="card-header">
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="hidden" id="post_id">{{id}}</p>
    <p class="card-text">{{content}}</p>
  </div>
  <div class="card-footer text-muted">
    Posted by
    {{user.name}}
    on
    {{format_date date_created}}
  </div>
</div>

<br /><br />

<div id="new-comment" class="input-group mb-3">
  <input
    type="text"
    class="form-control"
    aria-label="comment-content"
    id="comment-content"
    aria-describedby="button-addon2"
  />
  <button class="btn btn-primary" type="button" id="button-addon2">Add Comment</button>
</div>

<br /><br />

{{#if comments.length}}
  <div class="col-md-6">
    <h3>Comments:</h3>

    {{#each comments as |comments|}}
      <div class="card m-3">
        <div class="card-header">
          {{comments.user_id}}
          on
          {{comments.created_date}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{comments.content}}</p>
          </blockquote>
        </div>
      </div>

    {{/each}}
  </div>
{{/if}}

<script src="/js/comment.js"></script>