<div class="text-center">
  <p id="post_id">{{id}}</p>
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>


{{#if comments.length}}
  <div class="col-md-6">
    <h3>Comments:</h3>

    {{#each comments as |comments|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comments.content}}</p>
        <p>{{comments.user_id}}</p>
        <p>{{comments.created_date}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <p>
    <form id="new-comment">
      <div class="form-group">
        <label for="comment-content">Leave a comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
  </p>
</div>
<script src="./js/comment.js"></script>